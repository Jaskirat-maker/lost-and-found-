PORT=8080

# Database
DATABASE_URL=jdbc:postgresql://localhost:5432/lostfound
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
JPA_DDL_AUTO=update

# JWT (use a strong secret; 32+ bytes)
# Option A: long random string
JWT_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_SECRET_32+_CHARS
# Option B: base64 secret (prefix with base64:)
# JWT_SECRET=base64:REPLACE_WITH_BASE64_OF_32+_BYTES
JWT_ISSUER=lostfound-api
JWT_EXP_MINUTES=120

# CORS (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:5173

# College email requirement
COLLEGE_EMAIL_DOMAIN=college.edu

# Seed an admin user on startup (optional)
ADMIN_EMAIL=registrar@college.edu
ADMIN_PASSWORD=ChangeMeAdmin123!
ADMIN_NAME=Registrar Admin

# File uploads
UPLOAD_DIR=./uploads
UPLOAD_PUBLIC_PATH=/uploads

# Mail (optional; if MAIL_HOST empty, emails are skipped)
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=no-reply@college.edu
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS=true

